<div class="col-xs-offset-3 col-xs-6 devise">
  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, role: 'form', class: 'horizontal-form' }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <%= f.password_field :password, autofocus: true, class: 'form-control', autocomplete: "off", placeholder: 'New password' %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off", placeholder: "Confirm new password" %>
    </div>

    <%= f.submit "Change my password", class: 'btn btn-primary btn-block' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>