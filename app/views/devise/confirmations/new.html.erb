<div class="col-xs-offset-3 col-xs-6 devise">
	<h2>Resend confirmation instructions</h2>

	<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, role: 'form', class: 'horizontal-form' }) do |f| %>
	  <%= devise_error_messages! %>

	  <div class="form-group">
	    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email' %>
	  </div>

	  <div class="actions">
		<%= f.submit "Resend confirmation instructions", class: 'btn btn-primary btn-block' %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>